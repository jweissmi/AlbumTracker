@{
    ViewBag.Title = "Get Started";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>To use AlbumTracker.com to track all of your precious vinyl, please register below:</p>
<br />

@{
    if (IsPost)
    {
        string yourname = Request.Form["yourname"];
        string favoritegenre = Request.Form["favoritegenre"];
        string email = Request.Form["email"];

        <h3>You entered:</h3>
        <p>Your Name: @yourname</p>
        <p>Favorite Genre: @favoritegenre</p>
        <p>Email: @email</p>
    }
}

<br />

<form method="post">
    <fieldset>
        <legend>Register</legend>
        <div>
            <label for="YourName">Your Name:</label>
            <input type="text" name="YourName" value="" />
        </div>
        <div>
            <label for="FavoriteGenre">Favorite Genre:</label>
            <input type="text" name="FavoriteGenre" value="" />
        </div>
        <div>
            <label for="Email">Email:</label>
            <input type="text" name="Email" value="" />
        </div>
        <br />
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>